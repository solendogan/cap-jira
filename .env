# =============================================================================
# CAP Configuration
# =============================================================================

# Environment (development, production, test)
NODE_ENV=development

# Server Port
PORT=4004

# Logging Configuration
CDS_LOG_LEVELS_JIRA=debug
CDS_LOG_LEVELS_HTTP=info
CDS_LOG_LEVELS_SERVER=info

# =============================================================================
# Database Configuration
# =============================================================================

# For development (SQLite in-memory)
CDS_REQUIRES_DB_KIND=sqlite
CDS_REQUIRES_DB_CREDENTIALS_URL=:memory:

# For production with HANA (uncomment and configure)
# CDS_REQUIRES_DB_KIND=hana
# CDS_REQUIRES_DB_CREDENTIALS_HOST=your-hana-host
# CDS_REQUIRES_DB_CREDENTIALS_PORT=443
# CDS_REQUIRES_DB_CREDENTIALS_USER=your-db-user
# CDS_REQUIRES_DB_CREDENTIALS_PASSWORD=your-db-password
# CDS_REQUIRES_DB_CREDENTIALS_DATABASE=your-database
# CDS_REQUIRES_DB_CREDENTIALS_SCHEMA=your-schema

# =============================================================================
# Security Configuration
# =============================================================================

# Basic Auth (for development only)
CDS_REQUIRES_AUTH_KIND=basic

# For production with XSUAA (uncomment and configure)
# CDS_REQUIRES_AUTH_KIND=xsuaa
# CDS_REQUIRES_UAADOMAIN=your-uaa-domain
# CDS_REQUIRES_UAAURL=https://your-uaa-url
# CDS_REQUIRES_CLIENTID=your-client-id
# CDS_REQUIRES_CLIENTSECRET=your-client-secret

# =============================================================================
# JIRA Integration Settings
# =============================================================================

# Cache settings
JIRA_CACHE_TTL=300000
JIRA_CACHE_ENABLED=true

# API Rate limiting
JIRA_RATE_LIMIT_REQUESTS=100
JIRA_RATE_LIMIT_WINDOW=60000

# Default project for new issues
JIRA_DEFAULT_PROJECT=SAMPLE

# Default issue type for new issues
JIRA_DEFAULT_ISSUE_TYPE=Task

# =============================================================================
# Development & Debug Settings
# =============================================================================

# Debug mode
DEBUG=cap:*

# Show SQL queries in development
CDS_LOG_SQL=true

# Disable authentication in development (use with caution)
# CDS_REQUIRES_AUTH=false

# =============================================================================
# Optional: External Service Configuration
# =============================================================================

# If using SAP BTP Destination Service
# CDS_REQUIRES_DESTINATIONS_KIND=destination
# CDS_REQUIRES_DESTINATIONS_SERVICE=destination

# If using SAP BTP Connectivity Service
# CDS_REQUIRES_CONNECTIVITY_KIND=connectivity
# CDS_REQUIRES_CONNECTIVITY_SERVICE=connectivity
